{
  "name": "smooth-scroll",
  "version": "1.0.1",
  "description": "A smooth scroll wrapper component for React using Framer Motion",
  "author": "Thinakaran Manokaran <thinakaran@thinakaran.dev> (https://thinakaran.dev)",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "echo \"no tests\"",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thinakaran-dev/smooth-scroll.git"
  },
  "keywords": [
    "react",
    "smooth-scroll",
    "framer-motion",
    "scroll",
    "react-component",
    "animation",
    "ui"
  ],
  "peerDependencies": {
    "framer-motion": ">=6",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "eslint": "^8.57.1",
    "framer-motion": "^12.23.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^3.0.2",
    "tsup": "^6.7.0",
    "typescript": "^5.9.2"
  },
  "bugs": {
    "url": "https://github.com/thinakaranmanokaran/smooth-scroll/issues"
  },
  "homepage": "https://github.com/thinakaranmanokaran/smooth-scroll#readme"
