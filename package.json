{
  "name": "smooth-motion",
  "version": "1.0.3",
  "description": "A lightweight React smooth scroll component built with Framer Motion for fluid animations and modern UI experiences.",
  "author": "Thinakaran Manokaran (https://thinakaran.dev)",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "echo \"no tests\"",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thinakaranmanokaran/SmoothScroll"
  },
  "keywords": [
    "react",
    "react-component",
    "smooth-scroll",
    "framer-motion",
    "scroll-animation",
    "scroll-wrapper",
    "react-scroll",
    "react-animation",
    "react-ui",
    "fluid-scroll",
    "motion-ui"
  ],
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "dependencies": {
    "framer-motion": "^12.23.12"
  },
  "devDependencies": {
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "eslint": "^8.57.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^3.0.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "bugs": {
    "url": "https://github.com/thinakaranmanokaran/SmoothScrollissues"
  },
  "homepage": "https://github.com/thinakaranmanokaran/SmoothScroll#readme"
